<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.xebialabs.com/deployit/synthetic"
           xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd">

    <type-modification type="udm.Environment">
        <property label="Pause the deployment task" name="pausable" kind="boolean" required="false" default="false" category="Pause" description="If pause property is true, the plugin will add a pause step a the given order for all deployments targeting this environment."/>
        <property name="pauseOrder" kind="integer" required="true" default="85" category="Pause"/>
    </type-modification>

</synthetic>
